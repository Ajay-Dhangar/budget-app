{
    "manifest_version": 3,
    "name": "Expense Splitter Extension JS",
    "version": "1.0",
    "description": "Simple Expense splitter extension built in pure HTML CSS JS...",
    "author": "ajay-dhangar",
    "optional_permissions" : ["tabs"],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
